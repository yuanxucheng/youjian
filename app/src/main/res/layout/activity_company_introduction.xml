<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/theme"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.example.yj.mapapp.activity.CompanyIntroductionActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/companyIntroduction_layout_height"
        android:background="@color/grays">

        <ImageView
            android:id="@+id/id_back"
            android:layout_width="@dimen/companyIntroduction_imageView_width"
            android:layout_height="@dimen/companyIntroduction_imageView_height"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/companyIntroduction_imageView_marginRight"
            android:src="@mipmap/icon_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/companyIntroduction_title"
            android:textColor="@color/white"
            android:textSize="@dimen/companyIntroduction_font__titleSize" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/companyIntroduction_margin_bottom"
        android:layout_marginLeft="@dimen/companyIntroduction_margin_left">

        <!--<TextView-->
        <!--android:id="@+id/tv_build_enterprise_companyIntroduction"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text=""-->
        <!--android:textColor="#000000"-->
        <!--android:textSize="@dimen/buildEnterprises_font__size" />-->

        <TextView
            android:id="@+id/id_company_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#000000"
            android:textSize="@dimen/companyIntroduction_font__size"
            android:visibility="gone" />

        <WebView
            android:id="@+id/id_company_webview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:visibility="gone"></WebView>
    </LinearLayout>

</LinearLayout>
