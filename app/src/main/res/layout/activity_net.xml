<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.example.yj.mapapp.activity.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/register_layout_height"
        android:background="@color/grays">

        <ImageView
            android:id="@+id/id_back"
            android:layout_width="@dimen/register_imageView_width"
            android:layout_height="@dimen/register_imageView_height"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/register_imageView_marginRight"
            android:src="@mipmap/icon_back" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/fragment_cycle_viewpager_content"
            android:name="com.buyjc.yj.banner.CycleViewPager"
            android:layout_width="match_parent"
            android:layout_height="180dip"
            android:background="@color/login_background"
            android:src="@mipmap/login_logo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/login_textview_marginBottom"
        android:layout_marginLeft="@dimen/login_layout_marginLeft"
        android:layout_marginRight="@dimen/login_layout_marginRight"
        android:layout_marginTop="@dimen/login_layout_marginTop"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/id_login_user"
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_edittext_height_phone"
                android:background="@drawable/shape_login_edittext"
                android:drawableLeft="@mipmap/icon_user_login_name"
                android:hint="@string/login_input_username"
                android:singleLine="true"
                android:textSize="@dimen/login_edittext_textsize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/login_margin"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/id_login_pwd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_edittext_height_pwd"
                android:background="@drawable/shape_login_edittext"
                android:drawableLeft="@mipmap/icon_user_login_pwd"
                android:hint="@string/login_input_password"
                android:password="true"
                android:singleLine="true"
                android:textSize="@dimen/login_edittext_textsize" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/login_loginBtn_marginLeft"
        android:layout_marginRight="@dimen/login_loginBtn_marginRight"
        android:orientation="horizontal">

        <Button
            android:id="@+id/id_login"
            android:layout_width="@dimen/login_loginBtn_width"
            android:layout_height="@dimen/login_loginBtn_height"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/login_loginBtn_marginBottom"
            android:layout_weight="1"
            android:background="@drawable/shape_login_greens"
            android:text="@string/login"
            android:textColor="@color/white"
            android:textSize="@dimen/login_loginBtn_textsize" />

        <Button
            android:id="@+id/id_register"
            android:layout_width="@dimen/login_loginBtn_width"
            android:layout_height="@dimen/login_loginBtn_height"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/login_loginBtn_marginBottom"
            android:layout_marginLeft="@dimen/login_loginBtn_marginLeft"
            android:layout_weight="1"
            android:background="@drawable/shape_register_greens"
            android:text="@string/regist"
            android:textColor="@color/white"
            android:textSize="@dimen/login_loginBtn_textsize" />

    </LinearLayout>
</LinearLayout>
