<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/trade_leads_layout_height"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_trade_leads_supply"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="@string/trade_leads_supply"
            android:textColor="@color/black"
            android:textSize="@dimen/trade_leads_font__titleSize2" />

        <TextView
            android:id="@+id/id_trade_leads_buying_leads"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/gray"
            android:gravity="center"
            android:text="@string/trade_leads_buying_leads"
            android:textColor="@color/white"
            android:textSize="@dimen/trade_leads_font__titleSize2" />
    </LinearLayout>

</LinearLayout>