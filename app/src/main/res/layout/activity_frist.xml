<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/theme"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/frist_layout_height"
        android:background="@color/grays">

        <TextView
            android:id="@+id/id_current_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="上海市"
            android:textColor="@color/white"
            android:textSize="@dimen/frist_font__size2" />
        <!--  android:drawableRight="@mipmap/down"-->

        <TextView
            android:id="@+id/chat_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/first_website"
            android:textColor="@color/white"
            android:textSize="@dimen/frist_font__size" />

        <ImageView
            android:id="@+id/id_frist_menu"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:src="@mipmap/mm_title_btn_menu_normal" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <fragment
            android:id="@+id/fragment_cycle_viewpager_content"
            android:name="com.example.yj.mapapp.banner.CycleViewPager"
            android:layout_width="match_parent"
            android:layout_height="@dimen/frist_fragment_height"
            android:scaleType="fitXY" />


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/frist_margin_left">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/frist_margin_top"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/frist_btn_build_site"
                            android:layout_width="@dimen/frist_btn_width"
                            android:layout_height="@dimen/frist_btn_height"
                            android:layout_marginRight="@dimen/frist_margin_buttonright"
                            android:layout_weight="1"
                            android:background="@mipmap/icon_home_jzgd" />

                        <Button
                            android:id="@+id/frist_btn_build_enterprise"
                            android:layout_width="@dimen/frist_btn_width"
                            android:layout_height="@dimen/frist_btn_height"
                            android:layout_marginRight="@dimen/frist_margin_buttonright"
                            android:layout_weight="1"
                            android:background="@mipmap/icon_home_jcqy" />

                        <Button
                            android:id="@+id/id_home_glqy"
                            android:layout_width="@dimen/frist_btn_width"
                            android:layout_height="@dimen/frist_btn_height"
                            android:layout_marginRight="@dimen/frist_margin_buttonright"
                            android:layout_weight="1"
                            android:background="@mipmap/icon_home_glqy" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/frist_margin_top"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/id_home_wjcs"
                            android:layout_width="@dimen/frist_btn_width"
                            android:layout_height="@dimen/frist_btn_height"
                            android:layout_marginRight="@dimen/frist_margin_buttonright"
                            android:layout_weight="1"
                            android:background="@mipmap/icon_home_wjcs" />

                        <Button
                            android:id="@+id/id_home_lwzj"
                            android:layout_width="@dimen/frist_btn_width"
                            android:layout_height="@dimen/frist_btn_height"
                            android:layout_marginRight="@dimen/frist_margin_buttonright"
                            android:layout_weight="1"
                            android:background="@mipmap/icon_home_lwzj" />

                        <Button
                            android:id="@+id/id_frist_btn_search"
                            android:layout_width="@dimen/frist_btn_width"
                            android:layout_height="@dimen/frist_btn_height"
                            android:layout_marginRight="@dimen/frist_margin_buttonright"
                            android:layout_weight="1"
                            android:background="@mipmap/firm_search" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/frist_margin_top"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/id_frist_btn_add"
                            android:layout_width="@dimen/frist_btn_width"
                            android:layout_height="@dimen/frist_btn_height"
                            android:layout_marginRight="@dimen/frist_margin_buttonright"
                            android:layout_weight="1"
                            android:background="@mipmap/icon_add2" />

                        <Button
                            android:id="@+id/find"
                            android:layout_width="@dimen/frist_btn_width"
                            android:layout_height="@dimen/frist_btn_height"
                            android:layout_marginRight="@dimen/frist_margin_buttonright"
                            android:layout_weight="1"
                            android:background="@mipmap/icon_home_lwzj"
                            android:visibility="invisible" />

                        <Button
                            android:layout_width="@dimen/frist_btn_width"
                            android:layout_height="@dimen/frist_btn_height"
                            android:layout_marginRight="@dimen/frist_margin_buttonright"
                            android:layout_weight="1"
                            android:background="@mipmap/icon_add2"
                            android:visibility="invisible" />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/frist_downlayout_layoutheight"
            android:layout_alignParentBottom="true"
            android:background="@mipmap/frist_bg"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/id_first_one_hundreds"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/frist_downlayout_imageheight"
                android:layout_marginLeft="@dimen/frist_downlayout_imageleft"
                android:layout_marginRight="@dimen/frist_downlayout_imageright"
                android:layout_marginTop="@dimen/frist_downlayout_imagetop"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@mipmap/one_hundreds" />

            <ImageView
                android:id="@+id/id_first_sweep"
                android:layout_width="@dimen/frist_downlayout_imagewidth"
                android:layout_height="@dimen/frist_downimage_imageheight"
                android:layout_marginLeft="@dimen/frist_downimage_imageleft"
                android:layout_marginRight="@dimen/frist_downimage_imageright"
                android:layout_marginTop="@dimen/frist_downimage_imagetop"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@mipmap/sweep" />

            <ImageView
                android:id="@+id/id_first_personal_center"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/frist_downlayout_imageheight"
                android:layout_marginLeft="@dimen/frist_downlayout_imageleft"
                android:layout_marginRight="@dimen/frist_downlayout_imageright"
                android:layout_marginTop="@dimen/frist_downlayout_imagetop"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@mipmap/personal_center" />
        </LinearLayout>
    </LinearLayout>

    <WebView
        android:id="@+id/id_webview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:visibility="gone"></WebView>
</LinearLayout>