<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/hard_super_recycleViewItem_height"
    android:background="#DEE9E8"
    android:orientation="vertical"
    tools:context="com.example.yj.mapapp.activity.HardSuperActivity">

    <!--<include layout="@layout/content_hard_super" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/hard_super_margin_bottom"
            android:layout_marginLeft="@dimen/hard_super_margin_left"
            android:layout_marginTop="@dimen/hard_super_margin_bottom"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hard_super_name"
                    android:textColor="#000000"
                    android:textSize="@dimen/hard_super_font__size" />

                <TextView
                    android:id="@+id/id_hard_super_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="@dimen/hard_super_font__size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hard_super_area"
                    android:textColor="#000000"
                    android:textSize="@dimen/hard_super_font__size" />

                <TextView
                    android:id="@+id/id_hard_super_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="@dimen/hard_super_font__size" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/hard_super_margin_bottom"
            android:layout_marginLeft="@dimen/hard_super_margin_left"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hard_super_category"
                android:textColor="#000000"
                android:textSize="@dimen/hard_super_font__size" />

            <TextView
                android:id="@+id/id_hard_super_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="@dimen/hard_super_font__size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/hard_super_margin_bottom"
            android:layout_marginLeft="@dimen/hard_super_margin_left"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hard_super_contacts"
                    android:textColor="#000000"
                    android:textSize="@dimen/hard_super_font__size" />

                <TextView
                    android:id="@+id/id_hard_super_contacts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="@dimen/hard_super_font__size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/id_tv_hard_super_showPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hard_super_phone"
                    android:textColor="#000000"
                    android:textSize="@dimen/hard_super_font__size" />

                <TextView
                    android:id="@+id/id_hard_super_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="@dimen/hard_super_font__size"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/id_hard_super_callPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/call_phone" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/hard_super_margin_bottom"
            android:layout_marginLeft="@dimen/hard_super_margin_left"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hard_super_address"
                android:textColor="#000000"
                android:textSize="@dimen/hard_super_font__size" />

            <TextView
                android:id="@+id/id_hard_super_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="@dimen/hard_super_font__size" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
